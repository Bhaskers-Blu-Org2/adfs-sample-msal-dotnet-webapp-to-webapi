
@{
    ViewBag.Title = "Access Token";
}
<h2>@ViewBag.Title</h2>
@if (ViewBag.AuthorizationRequest != null)
{
    <text>
    This page requires you to grant additional permissions to the app. Click <a href="@ViewBag.AuthorizationRequest">here</a> to be redirected to the consent experience.
    </text>
}
else
{
    <h4>User Info:</h4>
    <text>
    Able to get access token successfully. Raw Token:
    @ViewBag.AccessToken
    </text>
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th class="claim-type claim-data claim-head">Claim Type</th>
            <th class="claim-data claim-head">Claim Value</th>
        </tr>
        <tr>
            <td class="claim-type claim-data">Environment</td>
            <td class="claim-data">@ViewBag.Environment</td>
        </tr>
        <tr>
            <td class="claim-type claim-data">Username</td>
            <td class="claim-data">@ViewBag.Username</td>
        </tr>
    </table>

}
